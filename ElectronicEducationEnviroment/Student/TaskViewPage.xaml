<Page x:Class="ElectronicEducationEnviroment.Student.TaskViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="TaskViewPage">

    <Grid Background="#f8f8f8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Margin="10" Padding="10">
            <StackPanel>
                <TextBlock x:Name="TitleText" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="Описание задания:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBlock x:Name="DescriptionText" 
                           TextWrapping="Wrap" 
                           FontSize="14" 
                           Margin="0,0,0,15"/>

                <TextBlock Text="Ваш ответ:" FontWeight="SemiBold" Margin="0,10,0,5"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="200">
                    <TextBox x:Name="AnswerBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="14"
                             Padding="5"
                             MinHeight="200"/>
                </ScrollViewer>

                <!-- Файлы -->
                <TextBlock Text="Прикреплённые файлы:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <StackPanel x:Name="FilesPanel" Margin="0,0,0,10"/>

                <Button x:Name="AttachFileBtn"
                        Content="Прикрепить файл"
                        Width="150"
                        Margin="0,0,0,10"
                        Click="AttachFileBtn_Click"/>
            </StackPanel>
        </ScrollViewer>

        <Button x:Name="SubmitBtn"
                Grid.Row="1"
                Content="Отправить ответ"
                Height="40"
                Margin="10"
                HorizontalAlignment="Right"
                Width="200"
                Foreground="White"
                FontWeight="Bold"
                Click="SubmitBtn_Click"/>
    </Grid>
</Page>
