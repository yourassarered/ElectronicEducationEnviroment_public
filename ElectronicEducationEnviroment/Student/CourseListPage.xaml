<Page x:Class="ElectronicEducationEnviroment.Student.CourseListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicEducationEnviroment.Student"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
     Title="Курсы">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <TextBlock Text="{Binding PageTitle}" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
            <StackPanel x:Name="CoursesStack"/>

         
        </StackPanel>
    </ScrollViewer>

</Page>
