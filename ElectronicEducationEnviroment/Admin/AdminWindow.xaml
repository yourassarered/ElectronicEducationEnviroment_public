<Window x:Class="ElectronicEducationEnviroment.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicEducationEnviroment.Admin"
        mc:Ignorable="d"
              Title="Админка" Height="600" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#EEE" >
            <Button Name="BtnUsers" Content="Пользователи" Margin="10" Height="40" Click="BtnUsers_Click"/>
            <Button Name="BtnGroups" Content="Группы" Margin="10" Height="40" Click="BtnGroups_Click" />
            <Button Name="BtnCourses" Content="Учебные программы" Margin="10" Height="40" Click="BtnCourses_Click"/>
            <Button Name="BtnClose" Content="Выйти" Margin="10" Height="40" Click="BtnClose_Click"/>
        </StackPanel>

        <Frame Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>