<Page x:Class="ElectronicEducationEnviroment.Admin.Pages.CourcePage.AssignProgramsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicEducationEnviroment.Admin.Pages.CourcePage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
    Title="Управление учебными программами">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="5" Padding="10">
            <DataGrid x:Name="ProgramsGrid"
                      AutoGenerateColumns="False"
                      SelectionMode="Single"
                      IsReadOnly="True"
                      CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdCourse}" Width="Auto" />
                    <DataGridTextColumn Header="Название программы" Binding="{Binding CourseName}" Width="*" />
                    <DataGridTextColumn Header="Описание" Binding="{Binding CourseDescription}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button Content="Добавить" Width="110" Click="Add_Click" Margin="10"/>
            <Button Content="Редактировать" Width="110" Click="Edit_Click" Margin="10" />
            <Button Content="Удалить" Width="110" Click="Delete_Click" Margin="10"/>
            <Button Content="Назначить группы" Width="110" Click="AssignGroups_Click" Margin="10" />
            <Button Content="Назначить преподавателей" Width="200" Click="AssignTeachers_Click" Margin="10" />
        </StackPanel>
    </Grid>
</Page>