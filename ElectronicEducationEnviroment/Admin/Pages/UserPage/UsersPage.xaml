<Page x:Class="ElectronicEducationEnviroment.Admin.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicEducationEnviroment.Admin.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
          Title="Управление пользователями"
      Background="White">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Name="UsersDataGrid" Grid.Row="0" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdUser}" Width="50"/>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role.RoleName}" Width="*"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0">

            <Button Content="Добавить" Width="100" Margin="5" Name="MultipleAddButton" Click="MultipleAddButton_Click"/>

            <Button Content="Редактировать" Width="100" Margin="5" Click="BtnEdit_Click"/>
            <Button Content="Удалить" Width="100" Margin="5" Click="BtnDelete_Click"/>

            
            <Button Content="«" Width="50" Margin="10,0,5,0" Click="BtnPrevPage_Click"/>
            <TextBlock Name="PageInfoText" VerticalAlignment="Center" FontWeight="Bold" Margin="5"/>
            <Button Content="»" Width="50" Margin="5,0,10,0" Click="BtnNextPage_Click"/>

            <TextBlock Text="Элементов на странице:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <ComboBox Name="PageSizeComboBox" Width="60" SelectionChanged="PageSizeComboBox_SelectionChanged">
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="10" IsSelected="True"/>
                <ComboBoxItem Content="25"/>
                <ComboBoxItem Content="50"/>
            </ComboBox>
        </StackPanel>
    </Grid>
</Page>
