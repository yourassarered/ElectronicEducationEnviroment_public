<Window x:Class="ElectronicEducationEnviroment.Admin.AddMultipleUsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавление студентов" Height="500" Width="850" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                       Text="Добавление нового студента"
                       FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Фамилия:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="LastNameTextBox" Margin="0,5,0,5" Width="200"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Имя:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="FirstNameTextBox" Margin="0,5,0,5" Width="200"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Email:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Grid.Row="3" Grid.Column="1" x:Name="EmailTextBox" Margin="0,5,0,5" Width="200"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Роль:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox Grid.Row="4" Grid.Column="1" x:Name="RoleComboBox"
                      Margin="0,5,0,5"
                      Width="200"
                      DisplayMemberPath="RoleName"
                      SelectedValuePath="IdRole"/>

            <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                <Button Content="Добавить в список" Click="AddToList_Click" Width="150" Margin="0,0,5,0"/>
                <Button Content="Очистить" Click="ClearFields_Click" Width="100"/>
            </StackPanel>

            <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Сохранить всех в базу" Click="SaveAll_Click" Width="180"/>
                <Button Content="Сохранить и создать группу" Click="SaveAndCreateGroup_Click"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Добавленные студенты:" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
            <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="4">
                <ListBox x:Name="AddedUsersListBox" DisplayMemberPath="DisplayInfo" />
            </Border>
        </StackPanel>
    </Grid>
</Window>
