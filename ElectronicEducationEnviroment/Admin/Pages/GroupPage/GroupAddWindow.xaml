<Window x:Class="ElectronicEducationEnviroment.Admin.Pages.GroupPage.GroupAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicEducationEnviroment.Admin.Pages.GroupPage"
        mc:Ignorable="d"
         Title="Добавить группу" Height="400" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Код группы:"/>
        <TextBox x:Name="GroupCodeBox" Margin="0 5 0 10"/>

        <TextBlock Text="Студенты без группы:"/>
        <ListBox x:Name="StudentsList" DisplayMemberPath="FullName" SelectionMode="Extended" Height="200"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Сохранить" Click="Save_Click" Margin="0 0 10 0"/>
            <Button Content="Отмена" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>