<Window x:Class="ElectronicEducationEnviroment.Teacher.LectureEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Редактор лекции"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Название лекции:" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
            <TextBox x:Name="TitleTextBox"
                     FontSize="16"
                     Padding="6"
                     Margin="10"
                     Background="White"
                     BorderBrush="#CCC"
                     BorderThickness="1"
                     Width="644"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,0,10,0">
                <Button Content="**Жирный**" Width="100" Height="35" Margin="0,0,0,5" Click="BtnBold_Click"/>
                <Button Content="*Курсив*" Width="100" Height="35" Margin="0,0,0,5" Click="BtnItalic_Click"/>
                <Button Content="`Код`" Width="100" Height="35" Margin="0,0,0,5" Click="BtnCode_Click"/>
                <Button Content="# Заголовок" Width="100" Height="35" Click="BtnHeader_Click"/>
            </StackPanel>

            <GridSplitter Grid.Column="1"
                          Width="6"
                          HorizontalAlignment="Center"
                          Background="#DDD"
                          ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True"
                          VerticalAlignment="Stretch"/>

            <avalonedit:TextEditor Grid.Column="2"
                                   Name="Editor"
                                   ShowLineNumbers="True"
                                   FontFamily="Consolas"
                                   FontSize="14"
                                   Background="White"
                                   BorderBrush="#CCC"
                                   BorderThickness="1"
                                   Padding="8"
                                   VerticalScrollBarVisibility="Auto"
                                   HorizontalScrollBarVisibility="Auto"
                                   TextChanged="Editor_TextChanged"
                                   PreviewTextInput="Editor_PreviewTextInput"/>

            <GridSplitter Grid.Column="3"
                          Width="6"
                          HorizontalAlignment="Center"
                          Background="#DDD"
                          ResizeBehavior="PreviousAndNext"
                          ShowsPreview="True"
                          VerticalAlignment="Stretch"/>

            <DockPanel Grid.Column="4">
                <wv2:WebView2 Name="PreviewWebView" Margin="0,5,0,0"/>
            </DockPanel>
        </Grid>

        <DockPanel Grid.Row="2" Margin="0,10,0,0" LastChildFill="False">
            <TextBlock x:Name="StatusText"
                       DockPanel.Dock="Bottom"
                       Foreground="Gray"
                       FontSize="12"
                       Text="Готово"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button x:Name="BtnSave" Content="💾 Сохранить" Width="140" Height="35" Margin="0,0,10,0" Click="BtnSave_Click"/>
                <Button x:Name="BtnCancel" Content="❌ Отмена" Width="120" Height="35" Click="BtnCancel_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
