<Window x:Class="ElectronicEducationEnviroment.Teacher.LectureAccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectronicEducationEnviroment.Teacher"
        mc:Ignorable="d"
       Title="Управление доступом к лекции"
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <TextBlock Text="Имеют доступ:" FontWeight="Bold"/>
            <ListBox x:Name="HasAccessList"
                     DisplayMemberPath="GroupName"
                     SelectionMode="Extended"
                     Height="250" />
            <Button Content="Убрать доступ" Click="Remove_Click" Margin="0 10 0 0"/>
        </StackPanel>

        <StackPanel Grid.Column="1">
            <TextBlock Text="Без доступа:" FontWeight="Bold"/>
            <ListBox x:Name="NoAccessList"
                     DisplayMemberPath="GroupName"
                     SelectionMode="Extended"
                     Height="250" />
            <Button Content="Добавить доступ" Click="Add_Click" Margin="0 10 0 0"/>
        </StackPanel>

        <Button Content="Закрыть" 
                Grid.ColumnSpan="2" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Margin="0 10 10 0"
                Click="Close_Click"/>
    </Grid>
</Window>