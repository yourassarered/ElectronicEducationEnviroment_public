<Page x:Class="ElectronicEducationEnviroment.Teacher.CourseContentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ElectronicEducationEnviroment.Teacher"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Контент курса">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" Visibility="Hidden" Name="TeacherDock"> 
                <Button Name="AddBtn" Content="Добавить лекцию" Margin="0,0,10,0" Click="AddBtn_Click" Width="150"/>
                <Button Content="Добавить задание" Margin="0,0,10,0" Width="150" x:Name="AddTaskBtn"  Click="AddTaskBtn_Click"/>
                <TextBlock Text="Группа:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="GroupsComboBox" Width="150"/>
                <Button Content="Экспорт оценок" Margin="10,0,0,0" Name="ExportGrades" Click="ExportGrades_Click"/>
            </StackPanel>

            <StackPanel x:Name="ContentStack" Margin="10"/>
        </StackPanel>
    </ScrollViewer>
</Page>
