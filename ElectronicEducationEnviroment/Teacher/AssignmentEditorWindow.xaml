<Window x:Class="ElectronicEducationEnviroment.Teacher.AssignmentEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор задания" Height="550" Width="600"
        Background="#fafafa" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Название задания" FontWeight="Bold" Margin="0 0 0 5"/>
            <TextBox x:Name="TitleBox" FontSize="16" Margin="0 0 0 15" Padding="6"/>

            <TextBlock Text="Выберите группу" FontWeight="Bold" Margin="0 0 0 5"/>
            <ComboBox x:Name="GroupComboBox" DisplayMemberPath="GroupCode" SelectedValuePath="IdGroup" Margin="0 0 0 15" Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Описание задания" FontWeight="Bold" Margin="0 0 0 5"/>
            <TextBox x:Name="TextBoxDesc"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Height="300"
                     Padding="6"
                     FontSize="14"
                     BorderBrush="#ccc"
                     BorderThickness="1"
                     Background="White"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="0 15 0 0">
            <Button Content="Сохранить" Click="Save_Click" Padding="15 6"
                     Foreground="White" Margin="0 0 10 0" BorderThickness="0"/>
            <Button Content="Отмена" Click="Cancel_Click" Padding="15 6" BorderThickness="0" Background="Red"/>
        </StackPanel>
    </Grid>
</Window>
